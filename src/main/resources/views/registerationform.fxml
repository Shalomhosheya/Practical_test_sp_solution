    <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="50.0" prefHeight="500.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">

        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>

        <!-- Form Title -->
        <Label text="User Registration" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>

        <Label text="Please fill in your information" textFill="#7f8c8d">
            <font>
                <Font size="13.0" />
            </font>
            <VBox.margin>
                <Insets top="-10.0" />
            </VBox.margin>
        </Label>

        <!-- Separator -->
        <Separator prefWidth="320.0">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Separator>

        <!-- First Name Field -->
        <VBox spacing="8.0">
            <Label text="First Name" textFill="#34495e">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="firstname" promptText="Enter your first name" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>
        </VBox>

        <!-- Last Name Field -->
        <VBox spacing="8.0">
            <Label text="Last Name" textFill="#34495e">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="lastname" promptText="Enter your last name" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>
        </VBox>

        <!-- Email Field -->
        <VBox spacing="8.0">
            <Label text="Email Address" textFill="#34495e">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="email" promptText="example@email.com" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="8.0">
            <Label text="Password" textFill="#34495e">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <PasswordField fx:id="password" promptText="Enter your password" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                <font>
                    <Font size="13.0" />
                </font>
            </PasswordField>
        </VBox>

        <!-- Checkbox -->
        <CheckBox text="I agree to the terms and conditions" textFill="#7f8c8d">
            <font>
                <Font size="12.0" />
            </font>
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </CheckBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15.0">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>

            <Button onAction="#loginttoBtn" prefWidth="120.0" style="-fx-background-color: #ecf0f1; -fx-text-fill: #7f8c8d; -fx-background-radius: 5; -fx-padding: 12; -fx-font-size: 14; -fx-font-weight: bold;" text="Cancel" />

            <Button onAction="#registerBtn" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12; -fx-font-size: 14; -fx-font-weight: bold;" text="Register" />
        </HBox>

    </VBox>

</AnchorPane>
